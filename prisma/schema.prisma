// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Recipe {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  mealType MealType
  url      String?
}

model MealPlan {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  days Day[]
}

type Day {
  meals String[]
}

enum MealType {
  BREAKFAST
  LUNCH
  DINNER
  SNACK
}
